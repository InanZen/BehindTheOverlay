{
  "name": "Overlay Remover Auto",
  "author": "InanZen",
  "description": "Automaticaly close detected overlays.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["js/ora_bg_script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["js/overlay_remover.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
       "32": "images/jalousie_open.svg"
    },
    "default_title": "Enabled"
  },
  "icons": {
    "128": "images/jalousie_open.svg"
  }
}
